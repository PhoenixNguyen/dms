<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >
        
     <LinearLayout
		        android:focusable="true" 
		        android:focusableInTouchMode="true"
    			android:layout_width="0px" 
    			android:layout_height="0px"/>
    <ScrollView 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    
        >
       
        <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:layout_marginTop="10dp"
	    >
	    	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    	<TextView 
	            android:layout_weight="0.3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="@+string/product_id"
	            />
	        
		    	
		        <EditText
		            android:id="@+id/product_id"
		            android:layout_weight="0.7"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            
		            />
            </LinearLayout>
            
	    	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    	<TextView 
	            android:layout_weight="0.3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="@+string/product_name"
	            />
	        
		    	
		        <EditText 
		            android:id="@+id/product_name"
		            android:layout_weight="0.7"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            
		            />
            </LinearLayout>
            
	    	
	    	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    	<TextView 
	            android:layout_weight="0.3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="@+string/product_barcode"
	            />
	        
		    	
		        <EditText 
		            android:id="@+id/product_barcode"
		            android:layout_weight="0.7"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:numeric="integer"
		            />
            </LinearLayout>
            <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    	<TextView 
	            android:layout_weight="0.3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="@+string/product_brand"
	            />
	        
		    	
		        <EditText 
		            android:id="@+id/product_brand"
		            android:layout_weight="0.7"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            
		            />
            </LinearLayout>
            <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    	<TextView 
	            android:layout_weight="0.3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="@+string/product_origin"
	            />
	        
		    	
		        <EditText 
		            android:id="@+id/product_origin"
		            android:layout_weight="0.7"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            
		            />
            </LinearLayout>
            <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    	<TextView 
	            android:layout_weight="0.3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="@+string/product_packing"
	            />
	        
		    	
		        <EditText 
		            android:id="@+id/product_packing"
		            android:layout_weight="0.7"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:numeric="integer"
		            />
            </LinearLayout>
            <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    	<TextView 
	            android:layout_weight="0.3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="@+string/product_quantification"
	            />
	        
		    	
		        <EditText 
		            android:id="@+id/product_quantification"
		            android:layout_weight="0.7"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            
		            />
            </LinearLayout>
            <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    	<TextView 
	            android:layout_weight="0.3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="@+string/product_tax"
	            />
	        
		    	
		        <EditText 
		            android:id="@+id/product_tax"
		            android:layout_weight="0.7"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:numeric="integer"
		            />
            </LinearLayout>
            <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    	<TextView 
	            android:layout_weight="0.3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="@+string/product_import_price"
	            />
	        
		    	
		        <EditText 
		            android:id="@+id/product_import_price"
		            android:layout_weight="0.7"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:numeric="integer"
		            />
            </LinearLayout>
            
            <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    	<TextView 
	            android:layout_weight="0.3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="@+string/product_export_price"
	            />
	        
		    	
		        <EditText 
		            android:id="@+id/product_export_price"
		            android:layout_weight="0.7"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:numeric="integer"
		            />
            </LinearLayout>
            
            <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    	<TextView 
	            android:layout_weight="0.3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="@+string/product_provider"
	            />
	        
		    	<Spinner 
		        android:id="@+id/product_provider"
		        android:layout_weight="0.7"
	            android:layout_width="0dp"
		        android:layout_height="wrap_content"/>
		        <!-- EditText 
		            android:id="@+id/product_provider"
		            android:layout_weight="0.7"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            
		            /-->
            </LinearLayout>
            
            <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    	<TextView 
	            android:layout_weight="0.3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="@+string/product_description"
	            />
	        
		    	
		        <EditText 
		            android:id="@+id/product_description"
		            android:layout_weight="0.7"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            
		            />
            </LinearLayout>
            
            <!-- LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    	<TextView 
	            android:layout_weight="0.3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="@+string/product_image_path"
	            />
	        
		    	
		        <EditText 
		            android:id="@+id/product_image_path"
		            android:layout_weight="0.7"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:hint="@+string/product_image_path"
		            
		            />
            </LinearLayout-->
        </LinearLayout>
    </ScrollView>
    

</LinearLayout>
