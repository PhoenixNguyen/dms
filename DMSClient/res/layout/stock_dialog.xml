<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FFFFCC"
    android:orientation="vertical" >
    <ScrollView 
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/FFFFCC"
        android:orientation="vertical">
        <!--  TextView 
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:text="@string/amount_title"/-->
        
        <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
		    <TextView 
	            android:id="@+id/stock_id"
	            android:gravity="right"
	            android:layout_weight="0.4"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:text="Mã kho:"
	            
	            />
		    <EditText 
	            android:id="@+id/stock_id_value"
	            android:gravity="right"
	            android:layout_weight="0.6"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:enabled="false"
	            android:text="@string/amount_ed"/>
		    
	    </LinearLayout>
	    <TextView 
	        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            />
        <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
		    <TextView 
	            android:id="@+id/product_name"
	            android:gravity="right"
	            android:layout_weight="0.4"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:text="Tên sản phẩm:"
	            
	            />
		    <EditText 
	            android:id="@+id/product_name_value"
	            android:gravity="right"
	            android:layout_weight="0.6"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:enabled="false"
	            android:text="@string/amount_ed"/>
	    </LinearLayout>
        <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
		    <TextView 
	            android:id="@+id/price"
	            android:gravity="right"
	            android:layout_weight="0.4"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:text="Giá sản phẩm:"
	            
	            />
		    <EditText 
	            android:id="@+id/price_value"
	            android:gravity="right"
	            android:layout_weight="0.6"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:enabled="false"
	            android:text="@string/amount_ed"/>
	    </LinearLayout>
	    
	    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
	    <TextView 
            android:id="@+id/date"
            android:gravity="right"
            android:layout_weight="0.4"
	        android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Ngày"/>
	    <EditText 
            android:id="@+id/date_value"
            android:gravity="right"
            android:layout_weight="0.6"
	        android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/amount_ed"/>
	    </LinearLayout>
	    
	    <EditText 
            android:id="@+id/tax"
	        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            />
	    
	    
	    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
		    <TextView 
	            android:id="@+id/total"
	            android:gravity="right"
	            android:layout_weight="0.4"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:text="Tồn hiện tại:"/>
		    <EditText 
	            android:id="@+id/sum_value"
	            android:gravity="right"
	            android:layout_weight="0.6"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:enabled="true"
	            android:text="@string/amount_ed"
	            android:numeric="integer"
	            />
	    </LinearLayout>
	    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
	    		<Button
		            android:id="@+id/save"
	        		android:layout_weight="0.5"
		        	android:layout_width="0dip"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="30dp"
		            android:text="@string/amount_save_bt"/>
	    		<Button
		            android:id="@+id/cancel"
	        		android:layout_weight="0.5"
		        	android:layout_width="0dip"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="30dp"
		            android:text="Hủy"/>
   		</LinearLayout>
    </LinearLayout>
      </ScrollView>  
</LinearLayout>
